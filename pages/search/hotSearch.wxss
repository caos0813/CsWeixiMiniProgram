@import "/components/searchInput/searchInput.wxss";

.search-header {
  padding: 10rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #e5e5e5;
  display: flex;
  background-color: #FAFAFA;
}

.search-header>.search-input {
  width: 585rpx;
}

.search-header>.cancel {
  font-size: 28rpx;
    padding: 18rpx 0 0rpx 30rpx;  
}
.history,.hot-search{
  font-size: 28rpx;
  padding:32rpx;
}
.history>text,.hot-search>text{
  border-radius: 6rpx;
  border: 1px solid #CCCCCC;
  padding:5rpx 13rpx;
  margin-top: 30rpx;
  margin-left: 30rpx;
  display: inline-block;
}
.header>.title {
  width: 112rpx;
  height: 40rpx;
  font-weight: bold;
}

.header>view {
  width: 26rpx;
  height: 30rpx;
  background-image: url(http://192.168.10.65:168/images/search-delete.png);
  background-size: 100%;
  background-repeat: no-repeat;
  background-position: center;
  float: right;
}
