<!--components/navtab/navtab.wxml-->
<view class="tab-wrap">
<view class="tab-head">
<view class="tabs">
    <view  wx:for="{{tabs}}" wx:key="{{index}}" data-index="{{index}}" bind:tap="bindTap" class="{{index==currentIndex?'tab-item active':'tab-item'}}">
      {{item}}
    </view>
</view>
<view class="tab-line">
  <view class="active" id="linepos"  animation="{{animationData}}" ></view>
</view>
</view>
<view class="tab-content">
    <slot></slot>
</view>
</view>