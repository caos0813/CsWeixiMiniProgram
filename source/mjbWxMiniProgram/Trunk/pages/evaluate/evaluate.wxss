/* pages/evaluate/evaluate.wxss */

.container {
  color: #333;
}

.eval-wrap {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  z-index: 99;
}

.eval-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 146rpx;
  font-size: 28rpx;
  height: 72rpx;
  border-bottom: 2rpx solid #e5e5e5;
}

.eval-title text.active {
  color: #ff681d;
  padding: 16rpx 0;
  border-bottom: 4rpx solid #ff681d;
}
/* 待评价 */
.logis-empty{
  position: absolute;
  top:-100rpx;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap:wrap;
  text-align: center;
}
.logis-empty image{
  width: 150rpx;
  height: 150rpx;
}
.empty-text{
  font-size: 30rpx;
  color: #999;
  padding-top:32rpx;
  padding-bottom: 53rpx;
}
.look-around{
  font-size: 28rpx;
  background-color: #fff;
  color: #ff681d;
}
.look-around::after{
  border-color: #ff681d;
}
.goodslist-item {
  display: flex;
  padding: 20rpx 32rpx;
  height: 200rpx;
}

.goodslist-pic {
  width: 200rpx;
}

.goodslist-pic image {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
}

.goodslist-info {
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 25rpx;
  color: #333;
  font-size: 26rpx;
}

.gl-name-wrap {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.gl-format {
  display: flex;
  align-items: center;
  padding-top: 20rpx;
  color: #999;
  font-size: 22rpx;
  line-height: 37rpx;
}

.gl-bot {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.gl-price {
  color: #333;
}

.gl-num {
  margin-left: 20rpx;
  color: #999;
  font-size: 24rpx;
}

.gl-eval button {
  /* width: 160rpx; */
  height: 64rpx;
  font-size: 24rpx;
  background-color: #fff;
  border: 1rpx solid #ff681d;
  color: #ff681d;
}

.gl-eval button::after {
  border: none;
}

/* 已评价 */

.evaluated {
  background-color: #f5f5f5;
}

.eval-item {
  padding: 24rpx 32rpx;
  font-size: 26rpx;
  background-color: #fff;
}

.eval-item:not(:last-child) {
  margin-bottom: 20rpx;
}

.eval-info {
  border-bottom: 2rpx solid #e5e5e5;
}

.ev-personInfo {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.per-info {
  display: flex;
  align-items: center;
  height: 60rpx;
}

.per-info image {
  width: 60rpx;
  height: 100%;
  border-radius: 50%;
  background-color: #f5f5f5;
}

.per-name {
  margin-left: 16rpx;
}

.ev-date {
  color: #999;
}

.ev-start {
  color: #ccc;
  font-size: 40rpx;
}

.ev-start text {
  margin-right: 15rpx;
}

.ev-start text.active {
  color: #ff681d;
}

.ev-content {
  padding: 24rpx 0;
}

.ev-pic image {
  width: 212rpx;
  height: 214rpx;
  background-color: #e5e5e5;
}

 .ev-pic image:nth-child(3n-1) {
   margin:0 24rpx;
}


.ev-format {
  color: #999;
  font-size: 22rpx;
  padding: 24rpx 0;
}

.eval-item .goodslist-item {
  padding: 24rpx 0 20rpx;
}
